<h1>Eat the Burger!</h1>
<img src="../public/assets/img/burger.jpg">

<h3>Burgers to eat</h3>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <form action="/burger/eat/{{id}}" method="POST">
        <div>
            <li>{{burger_name}}</li>
                <button type="submit">Devour It!</button>
        </div>
    </form>
    {{/unless}}
    {{/each}}
</ul>

<h3>Devoured Burgers</h3>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form" action="/burger/create" method="POST">

    <div>
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>

    <button type="submit">Add burger</button>
</form>